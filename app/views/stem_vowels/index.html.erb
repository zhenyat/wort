<div class='container'>
  <h1 class="font-bold text-4xl pb-6"><%= StemVowel.model_name.human count: 2 %></h1>

  <table class="min-w-full table-auto">
    <thead class="text-xl text-gray-700 bg-gray-200">
      <tr>
        <th scope="col" class="px-4 py-0"><%= StemVowel.human_attribute_name("scheme") %></th>
        <th scope="col" class="px-6 py-0"><%= StemVowel.human_attribute_name("assoc") %></th>
        <th scope="col" class="px-6 py-0"><%= StemVowel.human_attribute_name("sample") %></th>
      </tr>
    </thead>
    <tbody>
      <% @stem_vowels.each do |stem_vowel| %>
        <tr class="text-xl bg-blue-100 text-center even:bg-blue-50 odd:bg-green-50">
          <td class="px-6 py-4"><%= stem_vowel.scheme %></td>
          <td class="px-6 py-4"><%= stem_vowel.assoc %></td>
          <td class="px-6 py-4"><%= stem_vowel.sample %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
